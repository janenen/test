CXX := gcc
CFLAGS := #-g3
LDFLAGS :=
LDLIBS := -lstdc++
SILENT := @
ECHO := echo

MODULES = rekurs
SRC = $(MODULES:%=%.cpp)
OBJ = $(SRC:%.cpp=%.o)

all : rekurs

rekurs:$(OBJ)
	$(SILENT) $(ECHO) "--- Creating $@ ---"
	$(SILENT) $(CXX) $^ -o $@ $(LDLIBS)

%.o: %.cpp
	$(SILENT) $(ECHO) "--- Compiling $< ---"
	$(SILENT) $(CXX) -c $(CFLAGS) -g3 $<

.PHONY: clean

clean:
	$(SILENT) $(ECHO) "--- Removing object files ---"
	$(SILENT) rm -f *.o
